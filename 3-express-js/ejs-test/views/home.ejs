<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test EJS</title>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>
  <body>
    <h1>Hello <%= teacher%></h1>
    <ul class="students-cards">
      <% students.forEach(student=>{ %>
      <li class="card">
        <h3><%= student.name %></h3>
        <img src="<%= student.profilePicture %>" alt="<%= student.name %>" />
      </li>
      <% })%>
    </ul>
    <form class="student-form" method="post" action="/create">
      <label for="name">Student name</label>
      <input id="name" name="name" placeholder="Student name" />
      <label for="profile">Profile picture</label>
      <input id="profile" name="profilePicture" placeholder="Profile picture" />
      <button type="submit">Add student</button>
    </form>
    <script src="/public/js/index.js"></script>
  </body>
</html>
